FROM cznic/knot

RUN apt-get update && apt-get install -y iproute2 \
    tcpdump \
    iputils-ping \
    net-tools \
    bind9-utils \
    dnsutils \
    vim \
    inetutils-traceroute \
    mtr \
    iptables \
    nano \
    busybox \
    curl \
    links

COPY ./init/knot.conf /config/knot.conf
COPY ./init/byoi.com.zone /etc/knot/byoi.com.zone

COPY ./init/knot-start-up.sh /knot-start-up.sh

CMD ["/knot-start-up.sh"]
